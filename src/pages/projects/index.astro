---
import Base from "../../layouts/Base.astro";
import { site } from "../../data/site";
import { projects } from "../../data/projects";
import ProjectCard from "../../components/ProjectCard.astro";

const title = `Projects — ${site.name}`;
const description = site.seo.description;
---

<Base title={title} description={description}>
  <section class="pageHead">
    <h1>Projects</h1>
    <p class="lead">This page mirrors the homepage. If you bookmarked it, you’re in the right place.</p>
  </section>

  <section class="projectsGrid" aria-label="Project list">
    {projects.map((p) => (
      <ProjectCard project={p} />
    ))}
  </section>
</Base>
